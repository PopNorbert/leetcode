# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeTwoLists(self, list1: Optional[ListNode], list2: Optional[ListNode]) -> Optional[ListNode]:
        i = ListNode(0,None)
        z = i
        while list1 and list2:
            if list1.val < list2.val:
                i.next = list1
                list1 = list1.next
            else:
                i.next = list2
                list2 = list2.next
            i = i.next
        while list1:
            i.next = list1
            list1 = list1.next
            i = i.next
        while list2:
            i.next = list2
            list2 = list2.next
            i = i.next
        return z.next
